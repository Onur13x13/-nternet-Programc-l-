@model Kitap

<form method="post" enctype="multipart/form-data" id="kitapForm">
    <input asp-for="ResimUrl" hidden/>
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3">
                    <h2 class="text-primary">@(Model == null ? "Dosya Ekle" : "Dosya Güncelle")</h2>
                    <hr />
                </div>
                <div class="mb-3">
                    <label asp-for="KitapAdi" class="p-0">Dosya Adı</label>
                    <input asp-for="KitapAdi" class="form-control" />
                    <span asp-validation-for="KitapAdi" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="KitapTuruId" class="p-0">Dosya Türü</label>
                    <select asp-for="KitapTuruId" asp-items="ViewBag.KitapTuruList" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="Tanim" class="p-0">Tanım</label>
                    <input asp-for="Tanim" class="form-control" />
                    <span asp-validation-for="Tanim" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Yazar" class="p-0">Ekleyen</label>
                    <input asp-for="Yazar" class="form-control" />
                    <span asp-validation-for="Yazar" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Fiyat" class="p-0">Boyut</label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ResimUrl" class="p-0">Dosya(MB)</label>
                    <input type="file" name="file" class="form-control" id="resimInput" />
                </div>

                @if (Model != null)
                {
                    <button type="submit" id="ekleButton" class="btn btn-lg btn-primary" style="width:250px">
                        Güncelle
                    </button>
                }
                else
                {
                    <button id="ekleButton" type="submit" class="btn btn-lg btn-primary" style="width:250px" disabled>
                        Dosya Ekle
                    </button>
                }
                <a asp-controller="Kitap" asp-action="Index" class="btn btn-lg btn-primary" style="width=250px">
                    Dosyalara Geri Dön
                </a>
            </div>
        </div>
        <div class="col-2">
            @if (Model != null)
            {
                <img src="@Model.ResimUrl" width="100%" style="border-radius:7px; border:1px solid #bbb9b9" />
            }    
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/kitapTakip.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
}
